{
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `region`}}",
      "ami_regions": [
        "eu-west-2"
      ],
      "ami_users": "{{user `aws_user_ids`}}",
      "vpc_filter": {
        "filters": {
          "owner-id": "{{user `account_id`}}"
        }
      },
      "subnet_filter": {
        "filters": {
          "owner-id": "{{user `account_id`}}"
        },
        "most_free": true
      },
      "source_ami_filter": {
        "filters": {
          "tag:Name": "{{user `base_image`}}"
        },
        "owners": [
          "self"
        ],
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ssh_username": "centos",
      "ami_name": "{{user `image_name`}}"
    }
  ],
  "provisioners": [
    {
      "inline": [
        "sudo yum install curl -y"
      ],
      "pause_before": "10s",
      "type": "shell"
    }
  ],
  "variables": {
    "creation_timestamp": "{{timestamp}}",
    "image_name": "centos7",
    "base_image": "vanilla7"
  }
}
